<UserControl x:Class="ThapHaNoi_NguyenThanhPhi.Source.Choidon.TextControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="27" Width="199">

    <Grid Height="26" VerticalAlignment="Top" Margin="0,0,-1,0" HorizontalAlignment="Left" Width="200">
        <Border x:Name="brdBackGround" BorderThickness="0" IsHitTestVisible="False" Margin="0,0,0,0">
            <Border.Background>
                <SolidColorBrush Color="#FFB3CD8E" Opacity="0.4"/>
            </Border.Background>
        </Border>

        <TextBlock x:Name="txtNumber" FontSize="17" HorizontalAlignment="Left" Margin="6,2,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="39" IsHitTestVisible="False" Foreground="#FF1D1136" FontWeight="Bold"/>
        <TextBlock x:Name="txtMoveText" FontSize="19" HorizontalAlignment="Left" Margin="37,0,0,0" TextWrapping="Wrap" Text="Chuyển A qua C" VerticalAlignment="Top" Width="163" Height="26" TextAlignment="Center" IsHitTestVisible="False" Foreground="Black"/>
    </Grid>
</UserControl>
