<UserControl x:Class="ThapHaNoi_NguyenThanhPhi.DiskControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="discBrush" EndPoint="0,.5" SpreadMethod="Reflect">
            <GradientStop Color="DarkRed" Offset="0" />
            <GradientStop Color="Aqua" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot">
        <Rectangle x:Name="RectangleColor" Stroke="DarkGray" StrokeThickness="2" Fill="{StaticResource discBrush}" 
                   RadiusX="10" RadiusY="15" />
        <TextBlock x:Name="txtNumber" Foreground="#FF060606" FontWeight="Bold" FontSize="21" HorizontalAlignment="Center" VerticalAlignment="Center" Text="100" TextAlignment="Center"></TextBlock>
    </Grid>
</UserControl>